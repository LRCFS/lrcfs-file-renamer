{
	"name": "lrcfs-file-renamer",
	"productName": "LRCFS File Renamer",
	"version": "0.0.0",
	"description": "Rename files based on metadata",
	"license": "MIT",
	"repository": "https://github.com/LRCFS/",
	"main": "main.js",
	"author": {
		"name": "Roy Mudie",
		"email": "r.z.mudie@dundee.ac.uk",
		"url": "https://www.dundee.ac.uk/leverhulme"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows",
		"distwin": "electron-builder --windows",
		"distmac": "electron-builder --macos",
		"release": "np"
	},
	"dependencies": {
		"bootstrap4-toggle": "^3.5.0",
		"csv-parser": "^2.3.0",
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.0.0",
		"electron-store": "^4.0.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.12.0",
		"jquery": "^3.4.1",
		"jquery-nice-select": "^1.1.0",
		"json2csv": "^4.5.3",
		"underscore": "^1.9.1",
		"xlsx": "^0.15.1"
	},
	"devDependencies": {
		"bootstrap": "^4.3.1",
		"electron": "^6.0.7",
		"electron-builder": "^21.2.0",
		"np": "^5.0.3",
		"popper.js": "^1.15.0",
		"xo": "^0.24.0"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.lrcfs.fileRenamer",
		"win": {
			"target": "portable"
		},
		"mac": {
			"category": "public.app-category.utilities",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Chat"
		}
	}
}
