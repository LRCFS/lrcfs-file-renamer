[
	{
		"name": "Transfer & Persistence",
		"description": "We are creating and testing methods to detect how materials are transferred from places to people, or from people to people and how long materials can last in the environment once they have transferred. Methods have developed collaboratively by scientists at the LRCFS and over 50 academics from multiple disciplines and the judiciary.",
		"url": "https://www.dundee.ac.uk/leverhulme/projects/details/the-transfer-and-persistence-of-evidence.php",
		"submissionUrl": "https://lrcfs.dundee.ac.uk/transfer-and-persistence-submission/",
		"submissionInfo": "This project asks that you submit your data to our online submission tool. Once you are happy with your data please make sure to upload it as soon as possible.",
		"metadataRequiredColumns":
		{
			"Date":						{"useInFilename": true,	"renameTo": "",		"type": "date",	"allowNull": false,	"dateFormatJs": "YYYYMMDD",	"dateFormatPhp": "Ymd"},
			"Experiment":				{"useInFilename": true,	"renameTo": "EX",	"type": "int",	"allowNull": false, "minValue": 1, "maxValue": 100},
			"Replicate":				{"useInFilename": true,	"renameTo": "RP",	"type": "int",	"allowNull": false, "minValue": 1, "maxValue": 100},
			"Substrate":				{"useInFilename": true,	"renameTo": "SB",	"type": "text",	"allowNull": false,	"maxTextLength": 100},
			"SubstrateType":			{"useInFilename": true,	"renameTo": "ST",	"type": "text",	"allowNull": false,	"maxTextLength": 100},
			"ObservationType":			{"useInFilename": true,	"renameTo": "OT",	"type": "text",	"allowNull": false,	"maxTextLength": 100},
			"Mass (g)":					{"useInFilename": true,	"renameTo": "MA",	"type": "int",	"allowNull": false, "minValue": 0, "maxValue": 9999},
			"TransferTime (s)":			{"useInFilename": true,	"renameTo": "TT",	"type": "int",	"allowNull": false, "minValue": 0, "maxValue": 9999},
			"PersistenceTime (min)":	{"useInFilename": true,	"renameTo": "PT",	"type": "int",	"allowNull": false, "minValue": 0, "maxValue": 99999},
			"Temperature (DegC)":		{"useInFilename": true,	"renameTo": "TP",	"type": "int",	"allowNull": true, "minValue": -50, "maxValue": 300, "useInFilenameIfNull": true},
			"Humidity (%)":				{"useInFilename": true,	"renameTo": "HM",	"type": "int",	"allowNull": true, "minValue": 0, "maxValue": 100,  "useInFilenameIfNull": true}
		},
		"nullDataTagRegex": "^[Nn][Aa]$",
		"nullDataTagDisplay": "NA",
		"metadataCurrentFilenameColumn": "Filename",
		"metadataOldFilenameColumn": "OriginalFilename",
		"metadataNewFilenameColumn": "Filename",
		"filenamePropertySeperator": "-",
		"filenameValueSeperator": "",
		"replaceSpacesInFilenameWith": " ",
		"replaceInvalidCharactersInFilenameWith": "",
		"trimHeadersAndData": true,
		"ignoreFoldersInInputDirectory": true,
		"ignoreOutputFolderInInputDirectory": true,
		"filesAndFoldersToIgnoreInInputDirectory": [
			"^\\.DS_Store$",
			"^[Tt]emp$",
			"^thumbs\\.db$",
			"^\\.gitignore$",
			"^\\.gitattributes$",
			"^\\.git$",
			"^\\.\\_",
			"^\\.Trashes$",
			"^\\.Spotlight-V100$",
			"^\\.fseventsd$",
			"\\.url$",
			"\\.lnk$"
		]
	}
]